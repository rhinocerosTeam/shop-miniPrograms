/* pages/goods/index.wxss */
.body{
  background-color: #ebebeb;
}
/* =============swiper============= */
.swiper swiper,.slide-image{
  width: 100%;
  height: 600rpx;
}
/* =============baseinfo============= */
.baseinfo{
  padding: 15rpx 15rpx;
  background-color: #fff;
}
.baseinfo-name{
  font-size: 28rpx;
  color: #575757;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.baseinfo-price{
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}
.baseinfo .price{
  color: #ff5314;
  font-size: 35rpx;
 
}

.baseinfo .oldPrice{
   color: #999;
   margin-left: 20rpx;
   margin-top: 15rpx;
   font-size: 25rpx;
   text-decoration: line-through;
}
.baseinfo .saleNum{
   color: #999;
   margin-left: 20rpx;
   font-size: 28rpx;
}

/* =============swicthCont============= */
.swicthCont{
  display: flex;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 25rpx;
  background-color: #fff;
  margin-top: 12rpx;
}
.swicthCont view{
  width: 50%;
  text-align: center;
}
.swicthCont .active{
  color: #ff6700;
}

/* =============detail============= */
.detail-img{
  width: 100%;
  display: block;
}


/* =============footer============= */
.footer-btn{
  position: fixed;
  bottom: 0;
  left: 0;
  display: flex;
  width: 100%;
  flex-direction: row;
  font-size: 25rpx;
}
.footer-btn button{
  padding-left:0!important;
  padding-right:0!important;
  border-radius:0!important;
  font-size:30rpx;
  border: 0!important;

}
.footer-btn .shopCar{
  width: 150rpx;
}
.footer-btn .shopCar_jion{
  width: 400rpx;
  background-color: #ff6700;
  color: #fff;
}
.footer-btn .buy{
  width: 250rpx;
  background-color: #ea5f39;
  color: #fff;
}